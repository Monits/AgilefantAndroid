    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ba7e7979"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
