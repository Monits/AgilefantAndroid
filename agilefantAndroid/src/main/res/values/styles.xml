<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" tools:ignore="NewApi">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorPrimaryDark">@color/action_bar_color_dark</item>
        <item name="android:colorAccent">@color/cyan</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:textColorPrimary">@color/action_bar_text</item>
        <item name="selectableItemBackground">@color/action_bar_color</item>
        <item name="tabIndicatorColor">@color/action_bar_text</item>
        <item name="tabTextColor">@color/tab_not_selected_text</item>
    </style>

    <style name="AppTheme.WhiteBg" parent="AppTheme">
        <item name="android:windowBackground">@color/white_background</item>
    </style>

    <style name="fragmentBackground" parent="AppTheme">
        <item name="android:background">@color/translucent_black</item>
    </style>

    <style name="tabLayoutBackground" parent="AppTheme">
        <item name="android:background">@color/action_bar_color</item>
    </style>


    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/action_bar_text</item>
        <item name="android:textColorPrimary">@color/action_bar_popup_text_color</item>
    </style>

    <style name="Notification.Title" parent="TextAppearance.StatusBar.EventContent.Title">
    </style>

    <style name="fab_labels" parent="AppBaseTheme">
        <item name="android:textColor">@color/fab_label_primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/margin_fab_label_Right</item>
        <item name="android:background">@drawable/state_fab_text</item>
    </style>

    <style name="InputTextBigStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputTextSmallStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InputTextMediumStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
