<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_flipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/path_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/all_backlogs_child_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/path_separator"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp" >

            <TextView
                android:id="@+id/start_date"
                android:layout_width="@dimen/iteration_titles"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/start_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/project_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/start_date"
                android:layout_toRightOf="@id/start_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="@dimen/iteration_titles"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_date"
                android:text="@string/end_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/project_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/end_date"
                android:layout_toRightOf="@id/end_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/assignees_label"
                android:layout_width="@dimen/iteration_titles"
                android:layout_height="wrap_content"
                android:layout_below="@id/end_date"
                android:text="@string/assignees"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/assignees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/assignees_label"
                android:layout_toRightOf="@id/assignees_label"
                android:textColor="@android:color/black"
                android:clickable="true" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" >

            <android.support.v4.view.PagerTitleStrip
                android:id="@+id/pager_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</ViewFlipper>