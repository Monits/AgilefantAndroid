<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/story_item"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/column_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="@integer/column_name"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/task_stories_column_state"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/column_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/column_responsibles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.95"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/column_effort_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/column_original_estimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.95"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/column_spent_effort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.95"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

</LinearLayout>