<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="@dimen/margin_stories_task"
    android:layout_marginRight="@dimen/margin_stories_task"
    android:layout_marginTop="20dp"
    android:background="@drawable/task_item"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@id/column_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.4"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@id/column_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@id/column_responsibles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.95"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

    <TextView
        android:id="@id/column_effort_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@id/column_original_estimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

    <TextView
        android:id="@id/column_spent_effort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:visibility="gone"
        />

</LinearLayout>