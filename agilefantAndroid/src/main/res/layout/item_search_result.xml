<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_result_selector"
    android:padding="@dimen/list_padding_top">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SearchItemProduct"
        android:id="@+id/suggest_type"
        android:padding="@dimen/list_padding_top"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SearchItemProject"
        android:id="@+id/suggest_label"
        android:padding="@dimen/list_padding_top"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_not_selected_text"/>

</LinearLayout>