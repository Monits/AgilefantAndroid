<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/story_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/column_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/column_name"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/column_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/column_context"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/blue_light" />

    <TextView
        android:id="@+id/column_responsibles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:clickable="true"
        android:textColor="@android:color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/column_state"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/column_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>