<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/iteration_titles"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/name" />

        <TextView
            android:id="@+id/iteration_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name"
            android:layout_toRightOf="@id/name" />

        <TextView
            android:id="@+id/start_date"
            android:layout_width="@dimen/iteration_titles"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="@string/start_date" />

        <TextView
            android:id="@+id/iteration_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/start_date"
            android:layout_toRightOf="@id/start_date" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="@dimen/iteration_titles"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_date"
            android:text="@string/end_date" />

        <TextView
            android:id="@+id/iteration_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/end_date"
            android:layout_toRightOf="@id/end_date" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/storie_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/storie_state"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/state"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/storie_responsibles"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/responsibles"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/storie_effort_left"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/_el_"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/storie_original_estimate"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/_oe_"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/storie_spend_effort"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/es"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/stories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:groupIndicator="@null" >
    </ExpandableListView>

</LinearLayout>